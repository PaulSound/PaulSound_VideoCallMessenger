@model UserModel
<partial name="_Notification" />

<div class="text-center">
    <h4>Заполните поля для регистрации пользователя</h4>
</div>
<div class="container">
    <div class="d-flex justify-content-center h-100">
            <div class="container text-center my-5">
                <div class="border p-4"> 
                        <form method="post">
                            <div class="mb-3 row p-1">
                                <label class="p-0">UserName</label>
                                <input asp-for="UserName" placeholder="Username" class="form-control" />
                                <span asp-validation-for="UserName" class="text-warning"></span>

                                <label class="p-0">Email</label>
                                <input asp-for="Email" placeholder="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-warning"></span>

                                <label class="p-0">Password</label>
                                <input asp-for="Password" placeholder="Password"  class="form-control" id="new1Password" />
                                <span asp-validation-for="Password" class="text-warning"></span>

                                <label class="p-0">Confirm Password</label>
                                <input asp-for="ConfirmPassword" placeholder="Confirm your password"  class="form-control" id="new2Password" />
                                <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                                <div id="pswd_equal" class="pswd-security">
                                    <ul>
                                       <li id="match" class="invalid"></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="form-group mb-4">
                                <input type="submit" value="Sign In" class="btn btn-primary login_btn" />
                            </div>
                        </form>
                       
                        <div asp-validation-summary="ModelOnly" class="mb-3"></div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-center footer-links">
                                @Html.ActionLink("Уже есть аккаунт?", "Index")
                            </div>
                        </div>
                </div>
            </div>    
    </div>
</div>
@section Scripts {
   <partial name="_ValidationScriptsPartial" />
}
